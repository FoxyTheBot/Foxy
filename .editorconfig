root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4

ktlint_code_style = ktlint_official

max_line_length = 140

ij_kotlin_name_count_to_use_star_import = 2147483647
